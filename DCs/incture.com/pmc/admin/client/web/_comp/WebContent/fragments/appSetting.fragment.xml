<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog showHeader="false" class="dialogClass" contentWidth="30%">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Label text="Setting(s)" class="delegateLabelStyle mailTextStyle" />
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://decline" press="onSettingClose"></Button>
				</contentRight>
			</Bar>
		</customHeader>
		<VBox class="settingBoxStyle">
			<HBox>
				<Label text="Theme:" class="settingLabelStyle" />
				<Select change="onSkinSettingChange" class="sapUiSizeCompact dropDownStyle">
					<core:Item key="Dark" text="DARK SKIN" />
					<core:Item key="Light" text="LIGHT SKIN" />
				</Select>
			</HBox>
		</VBox>
	</Dialog>
</core:FragmentDefinition>